    </changeSet>

    <changeSet id="9" author="pstorch">
        <dropColumn tableName="countries" columnName="stationsIndex"/>
        <dropColumn tableName="countries" columnName="photosIndex"/>
    </changeSet>

</databaseChangeLog>
